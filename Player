package main.bisca;

import java.util.List;
import java.util.ArrayList;
import java.util.Random;

public class Player {

    String nome;
    List<Carta> mao;
    int pontos;

    Player(String nome) {
        this.nome = nome;
        this.mao = new ArrayList<Carta>() {
        };
        this.pontos = 0;
    }

    void receberCarta(Carta carta) {
        this.mao.add(carta);
    }
