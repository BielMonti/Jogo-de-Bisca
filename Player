package main.bisca;

import java.util.List;
import java.util.ArrayList;
import java.util.Random;

public class Player {

    String nome;
    List<Carta> mao;
    int pontos;

    Player(String nome) {
        this.nome = nome;
        this.mao = new ArrayList<Carta>() {
        };
        this.pontos = 0;
    }

    void receberCarta(Carta carta) {
        this.mao.add(carta);
    }

    Carta usarCarta() {
        Random rnd = new Random();
        int rnd1 = rnd.nextInt(this.mao.size());
        Carta removida = this.mao.get(rnd1);
        this.mao.remove(rnd1);
        return removida;
    }

    void adicionarPontos(int pontos) {
        this.pontos += pontos;
    }

    int consultarPontos() {
        return this.pontos;
    }

}
